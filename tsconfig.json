{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "NodeNext",
		"noImplicitOverride": true,
		"outDir": "./dist",
		"removeComments": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["src/types", "node_modules/@types"]
	},
	"exclude": ["coverage", "dist", "node_modules"],
	"include": ["src"]
}
